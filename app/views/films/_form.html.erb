
<%= form_for @film do |f| %>
<%= f.label :title %>
<%= f.text_field :title, placeholder: 'title', class: "form-control input-sm" %><br>
<br>
<%= f.label :description %>
<br>
<%= f.text_area :description, placeholder: "description", rows: 10%>
<br><br>
<div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div><br>
<div class="field">
    <%= f.label :video %><br>
    <%= f.file_field :video %>
</div><br>
<%= f.label :category %><br>
<%= f.select :category_id, @categories %>
<br><br><br>
<%= f.submit 'Send'%>
<% end %>
