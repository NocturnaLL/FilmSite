<% @films.each do |film| %>
	<div class="panel panel-default">
		<div class="panel-heading">
			<i class="fa fa-plus"></i>
      <%= link_to image_tag(film.image.url(:medium)), film_path(film) %>
			<%= link_to film.category.title, category_path(film.category) %>
			<i class="fa fa-angle-right"></i>
			<%= link_to film.title, film_path(film) %>
			<span class="pull-right label label-success">{<%= film.average_rating %>}</span>
		</div>
		<div class="panel-body">
			<p>
				<%= film.description %>
			</p>
		</div>
    	<div class="panel-footer">
			<div class="pull-left">
				<p>
					<span><i class="fa fa-user"></i> <strong>Ekleyen:</strong>
					<a href="#"><%= film.user.email %></a></span>
					<span>
						<i class="fa fa-calendar-o"></i>
						<strong>Eklenme Tarihi:</strong>
						<%=
	film.user.created_at.strftime("%d %B %Y")
						%>
						</span>
		 	   	</p>
		  	</div>
	      	<div class="pull-right">
				<%= link_to film_path(film), class: "btn btn-default" do %>
					Read More
					<i class="fa fa-angle-right"></i>
				<% end %>
	      	</div>
	      	<div class="clearfix"></div>
    	</div>
	</div>
<% end %>
